{{#extends 'base'}}

{{#block 'content'}}

<div class="row m-0">
    <div class="row m-0 px-4 pt-4">
        <div class="pb-3 mb-3 border-bottom">
            <h4 class="display-6">Delete Order</h4>
            <p class="lead text-muted">Order ID: #{{order.id}}</p>
        </div>

        <form method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
            <div class="py-3">
                <div class="alert alert-light shadow-sm border border-0 border-start border-danger border-3 rounded-0 d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                    <div>
                        Are you sure you want to delete this order? This action cannot be undone.
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Order Date / Time</th>
                            <th>Status</th>
                            <th>Customer Name</th>
                            <th>Customer Email</th>
                            <th>Total</th>
                            <th>Shipping Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                #{{order.id}}
                            </td>
                            <td>
                                {{order.date_formatted}}
                            </td>
                            <td>
                                {{order.orderstatus.status}}
                            </td>
                            <td>
                                {{order.user.name}}
                            </td>
                            <td>
                                {{order.user.email}}
                            </td>
                            <td>
                                {{order.order_total}}
                            </td>
                            <td>
                                {{order.shipping_address}}
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="mt-3">
                    <input type="submit" class="btn btn-danger" value="Yes, Delete"/>
                    <a href="/orders" class="btn btn-outline-secondary">No, Keep</a>
                </div>
                
            </div>
        </form>
    </div>
</div>


{{/block}}
{{/extends}}