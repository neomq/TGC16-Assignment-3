{{#extends 'base'}}

{{#block 'content'}}

<div class="row m-0">
    <div class="row m-0 px-4 pt-4">
        <div class="pb-3 mb-3 border-bottom">
            <h4 class="display-6">Delete Product</h4>
            <p class="lead text-muted">{{product.essentialoil.name}} (Product ID: #{{product.id}})</p>
        </div>

        <form method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
            <div class="py-3">
                <div class="alert alert-light shadow-sm border border-0 border-start border-danger border-3 rounded-0 d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                        <div>{{alert}}</div>
                        {{#if alert}}
                            <div></div>
                        {{else}}
                            <div>Are you sure you want to delete this product? This action cannot be undone.</div>
                        {{/if}} 
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Size</th>
                            <th>Price(cents)</th>
                            <th>Item Type</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#{{product.id}}</td>
                            <td>
                                {{#if product.image}}
                                    <img src="{{product.image}}" class="img-fluid" width="150" height="150"/>
                                {{/if}}
                            </td>
                            <td>{{product.essentialoil.name}}</td>
                            <td>{{product.size.size}}</td>
                            <td>{{product.price}}</td>
                            <td>{{product.itemtype.name}}</td>
                            <td>{{product.stock}}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="mt-3">
                    {{#if alert}}
                        <a href="/products" class="btn btn-outline-secondary">Cancel Delete</a>
                    {{else}}
                        <input type="submit" class="btn btn-danger" value="Yes, Delete"/>
                        <a href="/products" class="btn btn-outline-secondary">No, Keep</a>
                    {{/if}} 
                </div>
                
            </div>
        </form>
    </div>
</div>


{{/block}}
{{/extends}}